@model ElExitoS.Models.Producto

@{
    ViewData["Title"] = "Detalle Producto";
}

<h2 class="mb-3">Detalle producto</h2>
<form>
    <div class="mb-3">Detalle del Producto</div>

    <div class="card-shadow" style="max-width: 600px;">
        <div class="row g-0">
            <!--Imagen-->
            <div class="col-md-4">
                <img src="@(string.IsNullOrEmpty(Model.ImagenUrl)
                            ?"/images/mascotas/default.png"
                            :Model.ImagenUrl)"
                class="img-fluid rounded-start"
                alt="Imagen de @Model.Nombre"/>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title">@Model.Nombre</h4>

                    <p class="card-text">
                        <strong>Precio:</strong> @Model.Precio
                    </p>

                    <a asp-action="Index" class="btn btn-secondary">
                        Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Cancelar
        </a>
    </div>
</form>
